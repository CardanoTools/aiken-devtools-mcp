{
  "name": "aiken-devtools-vscode",
  "displayName": "Aiken Devtools (MCP)",
  "description": "Launch the Aiken Devtools MCP server from VS Code (stdio transport) and manage basic permissions.",
  "version": "0.0.1",
  "publisher": "cardanotools",
  "engines": {
    "vscode": "^1.108.0"
  },
  "activationEvents": [
    "onCommand:aiken-devtools.start",
    "onCommand:aiken-devtools.stop",
    "onCommand:aiken-devtools.restart",
    "onCommand:aiken-devtools.showLogs",
    "onCommand:aiken-devtools.openMenu"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/CardanoTools/aiken-devtools-mcp"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiken-devtools.start",
        "title": "Aiken Devtools: Start"
      },
      {
        "command": "aiken-devtools.stop",
        "title": "Aiken Devtools: Stop"
      },
      {
        "command": "aiken-devtools.restart",
        "title": "Aiken Devtools: Restart"
      },
      {
        "command": "aiken-devtools.showLogs",
        "title": "Aiken Devtools: Show Logs"
      },
      {
        "command": "aiken-devtools.openMenu",
        "title": "Aiken Devtools: Actions"
      },
      {
        "command": "aiken-devtools.showTools",
        "title": "Aiken Devtools: Show Tools"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Aiken Devtools",
      "properties": {
        "aikenDevtools.allowTools": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Array of tool names to allow (passed via --allow-tools to the server)"
        },
        "aikenDevtools.disableReadonly": {
          "type": "boolean",
          "description": "Disable readonly mode when launching the server (not recommended)."
        },
        "aikenDevtools.requireConsent": {
          "type": "boolean",
          "description": "Require user consent before allowing destructive tools."
        },
        "aikenDevtools.projectRoot": {
          "type": "string",
          "description": "Optional workspace-relative path or absolute path to the Aiken Devtools project root. If set, the extension will use this path to find the local server (dist/index.js)."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/vscode": "^1.108.1",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  }
}
